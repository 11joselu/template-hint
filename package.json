{
  "name": "template-hint",
  "version": "1.0.7",
  "description": "Displays XML errors in browser.",
  "main": "src/template-hint.js",
  "esnext": "src/template-hint.js",
  "module": "src/template-hint.js",
  "unpkg": "build/template-hint.browser.js",
  "scripts": {
    "demo-webpack-vanilla": "cd demo/webpack-vanilla && npx webpack-dev-server",
    "lint": "eslint ./src/*.js --fix",
    "prettier": " prettier .prettierrc --write \"./src/*.js\"",
    "linter": "npm run lint && npm run prettier",
    "browserify": "browserify --debug ./template-hint.browser.js -t [ babelify --presets [ @babel/preset-env ] ] > ./build/template-hint.browser.js",
    "build": "npm run lint && npm run browserify"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/11joselu/template-hint.git"
  },
  "keywords": [
    "error overlay",
    "error",
    "overlay",
    "gui",
    "modal",
    "popup",
    "uncaught",
    "unhandled",
    "promise",
    "unhandled exceptions",
    "unhandled errors",
    "error location",
    "html",
    "xml"
  ],
  "author": "Jose Cabrera <joselu11cabrera@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/11joselu/template-hint/issues"
  },
  "homepage": "https://github.com/11joselu/template-hint",
  "devDependencies": {
    "@babel/core": "7.11.6",
    "@babel/preset-env": "7.11.5",
    "@babel/preset-react": "7.10.4",
    "babelify": "10.0.0",
    "browserify": "16.5.2",
    "eslint": "7.9.0",
    "prettier": "2.1.2",
    "webpack": "4.44.2",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0"
  },
  "dependencies": {}
}
